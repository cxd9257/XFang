<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/fang_number_context"
            android:text="人民币帐户CNY"/>
        <com.demo.fang.widget.FonstText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/textColorGray"
            android:textSize="20sp"
            android:text="银行转账 >"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="总资产"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100232.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="总盈利"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_all_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="100232.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="当日盈亏"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_today_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="100232.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="总市值"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_all_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100232.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="可取"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_desirable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="100249.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_txt_context"
                android:text="可用"/>
            <TextView
                android:id="@+id/txt_usable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="100232.32"
                style="@style/fang_number_context"/>
        </LinearLayout>
    </LinearLayout>
    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eaeaea"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorBg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/fang_txt_context"
            android:layout_marginTop="5dp"
            android:text="名称/市值"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/fang_txt_context"
            android:layout_marginTop="5dp"
            android:text="成本/现价"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            style="@style/fang_txt_context"
            android:layout_marginTop="5dp"
            android:text="持仓/可用"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/fang_txt_context"
            android:layout_marginTop="5dp"
            android:text="盈亏"/>
    </LinearLayout>
</LinearLayout>