<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_number_item_context"
                android:text="有友食品"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/txt_all_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100232.32"
                style="@style/fang_txt_item_context_name"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:layout_height="wrap_content">
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_number_item_context"
                android:text="163.365"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="249.320"
                style="@style/fang_number_item_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:layout_height="wrap_content">
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_number_item_context"
                android:text="3600"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_usable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="3600"
                style="@style/fang_number_item_context"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/fang_number_item_context"
                android:text="58955"/>
            <com.demo.fang.widget.FonstText
                android:id="@+id/tv_profit_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_all_money"
                android:text="1002%"
                style="@style/fang_number_item_context"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>