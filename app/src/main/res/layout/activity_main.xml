<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_set_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置可用/可取"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:text="200000"
        android:textColor="@color/colorRad"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_set_money"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买入"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_fang_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小方证券"
        app:layout_constraintTop_toBottomOf="@id/btn_buy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:id="@+id/btn_fa_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广发证券"
        app:layout_constraintTop_toBottomOf="@id/btn_fang_trade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>