<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorBg</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="dialog_animations">
        <item name="android:windowExitAnimation">@anim/dialog_miss_anim</item>
    </style>
    
    <style name="fang_txt_context">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="fang_number_context">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="fang_txt_item_context_name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorGray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="fang_number_item_context">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
